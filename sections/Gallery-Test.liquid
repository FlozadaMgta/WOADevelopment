<div class="page-width">
  <div class="flex column-flex">
    {% for block in section.blocks %}
      <div class="flex__item text-center" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <noscript>
            <div class="column-flex__image column-flex__image--{{ section.settings.gallery_height }}" style="background-image: url({{ block.settings.image | img_url: '600x' }}); background-position: {{ block.settings.image_align }};"></div>
          </noscript>
          <div class="column-flex__image column-flex__image--{{ section.settings.gallery_height }} lazyload"
            style="background-position: {{ block.settings.image_align }};background-image: url('{{ block.settings.image | img_url: '300x300' }});"
            data-bgset="{% include 'bgset', image: block.settings.image %}"
            data-sizes="auto"
            data-parent-fit="cover">
          </div>
        {% else %}
          <div class="column-flex__image">
            <div class="placeholder-background">
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>



{% schema %}
{
  "name": {
    "en": "Gallery",
    "es": "Galería"
  },
  "class": "index-section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "select",
      "id": "gallery_height",
      "label": {
        "en": "Gallery height",
        "es": "Altura de la galería"
      },
      "default": "short",
      "options": [
        {
          "value": "short",
          "label": {
            "en": "Short",
            "es": "Baja"
          }
        },
        {
          "value": "tall",
          "label": {
            "en": "Tall",
            "es": "Alta"
          }
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": {
        "en": "Image",
        "es": "Imagen"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image",
            "es": "Imagen"
          }
        },
        {
          "type": "radio",
          "id": "image_align",
          "label": {
            "en": "Image alignment",
            "es": "Alineación de imagen"
          },
          "options": [
            {
              "value": "top center",
              "label": {
                "en": "Top center",
                "es": "Superior centrada"
              }
            },
            {
              "value": "center center",
              "label": {
                "en": "Center",
                "es": "Centrar"
              }
            },
            {
              "value": "bottom center",
              "label": {
                "en": "Bottom center",
                "es": "Inferior centrada"
              }
            }
          ],
          "default": "top center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Gallery",
        "es": "Galería"
      },
      "category": {
        "en": "Image",
        "es": "Imagen"
      },
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}


